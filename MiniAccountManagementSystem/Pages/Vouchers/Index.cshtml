@page
@model MiniAccountManagementSystem.Pages.Vouchers.IndexModel
@{
    ViewData["Title"] = "Vouchers";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h1>Vouchers</h1>
@if (!User.IsInRole("Viewer"))
{
    <a asp-page="CreateVoucher" class="btn btn-primary mb-3">Create New Voucher</a>

}
<a asp-page-handler="Export" class="btn btn-success mb-3">Export to Excel</a>
<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Date</th>
            <th>Reference No</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voucher in Model.Vouchers)
        {
            <tr>
                <td>@voucher.VoucherType</td>
                <td>@voucher.VoucherDate.ToString("dd-MMM-yyyy")</td>
                <td>@voucher.ReferenceNo</td>
            </tr>
        }
    </tbody>
</table>