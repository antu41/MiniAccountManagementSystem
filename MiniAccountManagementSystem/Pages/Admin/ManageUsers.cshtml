@page
@model MiniAccountManagementSystem.Pages.Admin.ManageUsersModel
@{
    ViewData["Title"] = "Manage Users";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<h1>Manage Users</h1>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <form method="post" class="d-inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="roleName">
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" asp-page-handler="AssignRole" class="btn btn-sm btn-primary">Assign Role</button>
                        <button type="submit" asp-page-handler="RemoveRole" class="btn btn-sm btn-danger">Remove Role</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>